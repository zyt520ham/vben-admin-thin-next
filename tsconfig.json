{
  "compilerOptions": {
    "target": "esnext",// 编译输出目标 版本
    "module": "esnext",// 采用的模块系统
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,// 允许从没有设置默认导出的模块中默认导入
//    "strictPropertyInitialization":false,//验证构造函数内部初始化前后已定义的属性。
    "strictFunctionTypes": false,
    "jsx": "preserve",// 在.tsx文件里支持JSX
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,// 启用装饰器
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "types": ["vite/client", "jest"],
    "typeRoots": [
      "./node_modules/@types/",
      "./@types"
    ],
    "noImplicitAny": false,//不允许this上下文隐式定义
    "skipLibCheck": true,
    "paths": {
      "/@/*": ["src/*"],
      "/#/*": ["@types/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "@types/**/*.d.ts",
    "@types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js","study-doc"]
}
